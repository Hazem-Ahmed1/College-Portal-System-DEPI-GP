@using College_portal_System.Models.StudentViewModels
@model ChangePassViewModel
@{
    ViewData["Title"] = "ChangePass";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewData["firstname"] = "Yassin";
    ViewData["lastname"] = "Ahmed";
    ViewData["image"] = null;
    ViewData["gender"] = false;
    ViewData["id"] = "30308132100798";
}

<div class="pagetitle">
    <h1>Profile</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item">Profile</li>
            <li class="breadcrumb-item active">Change Password</li>
        </ol>
    </nav>
</div>

<ul class="nav nav-tabs nav-tabs-bordered">
    <li class="nav-item">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-change-password">Change Password</button>
    </li>
</ul>

<div class="tab-pane fade show active pt-3" id="profile-change-password">
    <form asp-controller="Student" asp-action="ChangePass" asp-route-id="@ViewData["id"]" method="post">
        <div class="row mb-3">
            <label for="currentPassword" class="col-md-4 col-lg-3 col-form-label">Current Password</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="CurrentPass" type="password" class="form-control">
                <span asp-validation-for="CurrentPass" class="text-danger"></span>
                @if (TempData["Message1"] != null)
                {
                    <div class="text-danger">
                        @TempData["Message1"]
                    </div>
                }
            </div>
        </div>

        <div class="row mb-3">
            <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">New Password</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="NewPass" type="password" class="form-control">
                <span asp-validation-for="NewPass" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Re-enter New Password</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="ConfrimPass" type="password" class="form-control">
                <span asp-validation-for="ConfrimPass" class="text-danger"></span>
                @if (TempData["Message2"] != null)
                {
                    <div class="text-danger">
                        @TempData["Message2"]
                    </div>
                }
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Change Password</button>
        </div>
    </form>
</div>
