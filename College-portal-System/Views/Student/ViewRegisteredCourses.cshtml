@using College_portal_System.Models.StudentViewModels
@model List<AvailableCoursesViewModel>
@{
    ViewData["Title"] = "ViewRegisteredCourses";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewData["firstname"] = "Yassin";
    ViewData["lastname"] = "Ahmed";
    ViewData["image"] = null;
    ViewData["gender"] = "Male";
    ViewData["id"] = "30308132100798";
}

<div class="pagetitle">
    <h1>Courses</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item">Courses</li>
            <li class="breadcrumb-item active">View Courses</li>
        </ol>
    </nav>
</div>
@if (TempData["success"] != null)
{
    <div class="alert alert-info">
        @TempData["success"]
    </div>
}
<div class="card">
    <div class="card-body">
        <!-- Bordered Table -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Course Name</th>
                    <th scope="col">Course Code</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Name</th>
                        <td>@item.Code</td>
                        <td>
                            <form asp-controller="Student" asp-action="DeleteRegister" asp-route-Id="@item.EnrollmentId" method="post">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Delete</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

