@using College_portal_System.Models.StudentViewModels
@model List<TaskViewModel>
@{
    ViewData["Title"] = "GetMyTasks";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewData["id"] = "30308132100798";
}
<div class="pagetitle">
    <h1>Tasks</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item active">MyTasks</li>
        </ol>
    </nav>
</div>
@foreach(var item in Model)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@item.CourseName (@item.Type)</h5>
            <p>@item.Content</p>
            <p>Grade: @item.Grade</p>
            <p>Deadline: @item.DeadLine</p>
            <p>Project Details:<a href="@item.TaskDetailsLink" target="_blank">Show Details</a></p>
            <form asp-controller="Student" asp-action="" asp-route-Id="@ViewData["id"]">
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
}
