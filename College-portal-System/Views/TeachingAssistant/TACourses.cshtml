@using College_portal_System.ViewModels.TAViewModels
@{
    ViewData["Title"] = "My Courses";
    Layout = "~/Views/Shared/_LayoutTeachingAssistant.cshtml";
}
@model List<TACoursesViewModel>;

<div class="pagetitle">
    <h1>Courses Page</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item active">Courses</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-lg-4 col-12">
                <a asp-controller="Courses" asp-action="Details" asp-route-id=@course.CourseID>
                    <!-- Update route parameters as needed -->
                    <div class="course-card">
                        <div class="text-center">
                            <h3>
                                @course.CourseName
                            </h3>
                            <p class="m-0">Prof : @course.ProfessorName </p>
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>
</section>

@section Scripts {
    <script>
        function getRandomSpecificColor() {
            const colors = [
                '#f43f5e', // Vibrant red-pink
                '#3b82f6', // Bright blue
                '#22c55e', // Bright green
                '#f97316', // Vibrant orange
                '#eab308', // Bright yellow
                '#10b981', // Teal-green
                '#8b5cf6', // Purple
                '#ec4899', // Pink
                '#14b8a6', // Cyan
                '#facc15', // Yellow gold
                '#ef4444', // Bright red
                '#6366f1', // Indigo
                '#4ade80', // Light green
                '#f87171', // Light red
                '#60a5fa'  // Light blue
            ];
            return colors[Math.floor(Math.random() * colors.length)];
        }
        const courseCards = document.querySelectorAll(".course-card");

        courseCards.forEach(card => {
            card.style.backgroundColor = getRandomSpecificColor();
        });
    </script>
}
