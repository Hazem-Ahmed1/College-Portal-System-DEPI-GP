@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_LayoutTeachingAssistant.cshtml";
}

<div class="pagetitle">
    <h1>Welcome @ViewBag.Name</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Dashboard</li>
            @* <li class="breadcrumb-item active"></li> *@
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">

        <div class="col-lg-4 col-12">
            <a asp-controller="TeachingAssistant" asp-action="MyCourses">
                <!-- Update route parameters as needed -->
                <div class="course-card">
                    <div class="text-center">
                        <h3>
                            My Courses
                        </h3>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-4 col-12">
            <a asp-controller="TeachingAssistant" asp-action="UpdateProfile">
                <!-- Update route parameters as needed -->
                <div class="course-card">
                    <div class="text-center">
                        <h3>
                            Update Profile
                        </h3>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-4 col-12">
            <a asp-controller="TeachingAssistant" asp-action="CreateQuiz">
                <!-- Update route parameters as needed -->
                <div class="course-card">
                    <div class="text-center">
                        <h3>
                            Create Quiz
                        </h3>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-4 col-12">
            <a asp-controller="TeachingAssistant" asp-action="CreateTask" >
                <!-- Update route parameters as needed -->
                <div class="course-card">
                    <div class="text-center">
                        <h3>
                            My Tasks
                        </h3>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-4 col-12">
            <a asp-controller="TeachingAssistant" asp-action="ShowTasksSubmissions">
                <!-- Update route parameters as needed -->
                <div class="course-card">
                    <div class="text-center">
                        <h3>
                            Show Tasks Submissions
                        </h3>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        function getRandomSpecificColor() {
            const colors = [
                '#f43f5e', // Vibrant red-pink
                '#3b82f6', // Bright blue
                '#22c55e', // Bright green
                '#f97316', // Vibrant orange
                '#eab308', // Bright yellow
                '#10b981', // Teal-green
                '#8b5cf6', // Purple
                '#ec4899', // Pink
                '#14b8a6', // Cyan
                '#facc15', // Yellow gold
                '#ef4444', // Bright red
                '#6366f1', // Indigo
                '#4ade80', // Light green
                '#f87171', // Light red
                '#60a5fa'  // Light blue
            ];
            return colors[Math.floor(Math.random() * colors.length)];
        }
        const courseCards = document.querySelectorAll(".course-card");

        courseCards.forEach(card => {
            card.style.backgroundColor = getRandomSpecificColor();
        });
    </script>

   <style>
        .col-lg-4{
            margin-top: 15px;
        }
   </style>
}
