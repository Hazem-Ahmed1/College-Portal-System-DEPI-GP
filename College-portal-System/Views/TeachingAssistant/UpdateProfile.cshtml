@{
    ViewData["title"] = "Update Profile";
    Layout = "~/Views/Shared/_LayoutTeachingAssistant.cshtml";
}
@model UpdateProfileViewModel;
<div class="pagetitle">
    <h1>Update Profile</h1>
    <nav>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Edit Information</h5>

                    <form class="row g-3 needs-validation" method="post" asp-action="UpdateProfile" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <!-- Non-editable National ID -->
                        <div class="col-md-4 position-relative">
                            <label asp-for="NationalID" class="form-label">National ID (Non-editable)</label>
                            <input type="text" asp-for="NationalID" class="form-control" id="nationalId" value="@Model.NationalID" readonly>
                        </div>
                       
                         <!-- Non-editable National ID -->
                        <div class="col-md-4 position-relative">
                            <label asp-for="FName" class="form-label">First Name (Non-editable)</label>
                            <input type="text" asp-for="FName" class="form-control"  value="@Model.FName" readonly>
                        </div>

                        <!-- Non-editable National ID -->
                        <div class="col-md-4 position-relative">
                            <label asp-for="LName" class="form-label">Last Name (Non-editable)</label>
                            <input type="text" asp-for="LName" class="form-control"  value="@Model.LName" readonly>
                        </div>

                        <!-- Editable Email -->
                        <div class="col-md-4 position-relative">
                           <label asp-for="Email"  class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" value="@Model.Email" required>
                            @* <div class="valid-tooltip">Looks good!</div>
                            <div class="invalid-tooltip">Please provide an Email.</div> *@
                            <span asp-validation-for="Email" class="text-danger" ></span>
                        </div>

                        <div class="col-md-4 position-relative">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input asp-for="Address" class="form-control" value="@Model.Address" required>
                            @* <div class="valid-tooltip">Looks good!</div>
                            <div class="invalid-tooltip">Please provide an Email.</div> *@
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 position-relative">
                            <label asp-for="Password" class="form-label"> Password</label>
                            <input asp-for="Password" type="Password" class="form-control" value="@Model.Password" required>
                            @* <div class="valid-tooltip">Looks good!</div>
                            <div class="invalid-tooltip">Please provide an Email.</div> *@
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 position-relative">
                            <label asp-for="Repassword" class="form-label">Re enter the Password</label>
                            <input asp-for="Repassword" type="Password" class="form-control" value="@Model.Password" required>
                            @* <div class="valid-tooltip">Looks good!</div>
                            <div class="invalid-tooltip">Please provide an Email.</div> *@
                            <span asp-validation-for="Repassword" class="text-danger"></span>
                        </div>
                        <div>
                            <label>Current Image:</label>
                            <br />
                            @if (!string.IsNullOrEmpty(Model.ImageBase64))
                            {
                                <img src = @ImageHandler.GetImageSouce(Model.ImageBase64) alt="TA Image" style="max-width: 100px;" />
                            }
                            else
                            {
                                <p>No image available.</p>
                            }
                        </div>

                        <div class="col-md-4 position-relative">
                            <label asp-for="Image">Upload a new Image</label>
                            <input asp-for="Image" class="form-control"  type="file" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>