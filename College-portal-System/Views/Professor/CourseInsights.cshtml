@{
    ViewData["hello"] = "Hello";
    Layout = "~/Views/Shared/_LayoutProfessor.cshtml";
}
<div class="pagetitle">
    <h1>Dashboard / Add Materials</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Pages</li>
            <li class="breadcrumb-item active">Add Materials</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add New Material</h5>
                    <p>Fill in the details to add a new material.</p>

                    <!-- Custom Styled Validation with Tooltips -->
                    <form class="row g-3 needs-validation" novalidate>

                        <!-- Material Name -->
                        <div class="col-md-6 position-relative">
                            <label for="validationTooltipMaterialName" class="form-label">Material Name</label>
                            <input type="text" class="form-control" id="validationTooltipMaterialName" required>
                            <div class="invalid-tooltip">
                                Please provide a valid material name.
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="col-md-6 position-relative">
                            <label for="validationTooltipDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="validationTooltipDescription" required></textarea>
                            <div class="invalid-tooltip">
                                Please provide a valid description.
                            </div>
                        </div>

                        <!-- Link -->
                        <div class="col-md-6 position-relative">
                            <label for="validationTooltipLink" class="form-label">Material Link</label>
                            <input type="url" class="form-control" id="validationTooltipLink" required>
                            <div class="invalid-tooltip">
                                Please provide a valid URL.
                            </div>
                        </div>

                        <!-- Course (Select Options) -->
                        <div class="col-md-6 position-relative">
                            <label for="validationTooltipCourse" class="form-label">Course</label>
                            <select class="form-select" id="validationTooltipCourse" required>
                                <option selected disabled value="">Choose a course...</option>
                                <option value="1">Course 1</option>
                                <option value="2">Course 2</option>
                                <option value="3">Course 3</option>
                                <!-- Add more options as needed -->
                            </select>
                            <div class="invalid-tooltip">
                                Please select a course.
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="col-12">
                            <button class="btn btn-success" type="submit">Submit form</button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</section>

