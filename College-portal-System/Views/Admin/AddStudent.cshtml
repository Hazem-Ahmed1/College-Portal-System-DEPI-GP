
@{
    ViewData["hello"] = "Hello";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="pagetitle">
    <h1>Students Page</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Pages</li>
            <li class="breadcrumb-item active">Students</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add New Student</h5>
                    <p>Any Other Information Will be Generated Automatically</p>

                    <!-- Custom Styled Validation with Tooltips -->
                    <form class="row g-3 needs-validation" novalidate>

                        <!-- National ID -->
                        <div class="col-md-6 position-relative">
                            <label for="validationTooltipNationalID" class="form-label">National ID</label>
                            <input type="text" class="form-control" id="validationTooltipNationalID" required>
                            <div class="invalid-tooltip">
                                Please provide a valid National ID.
                            </div>
                        </div>

                        <!-- First Name -->
                        <div class="col-md-6 position-relative">
                            <label for="validationTooltipFirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="validationTooltipFirstName" required>
                            <div class="valid-tooltip">
                                Looks good!
                            </div>
                            <div class="invalid-tooltip">
                                Please provide a valid National ID.
                            </div>
                        </div>

                        <!-- Middle Name -->
                        <div class="col-md-6 position-relative">
                            <label for="validationTooltipMiddleName" class="form-label">Middle Name</label>
                            <input type="text" class="form-control" id="validationTooltipMiddleName" required>
                            <div class="valid-tooltip">
                                Looks good!
                            </div>
                            <div class="invalid-tooltip">
                                Please provide a valid National ID.
                            </div>
                        </div>

                        <!-- Last Name -->
                        <div class="col-md-6 position-relative">
                            <label for="validationTooltipLastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="validationTooltipLastName" required>
                            <div class="valid-tooltip">
                                Looks good!
                            </div>
                            <div class="invalid-tooltip">
                                Please provide a valid National ID.
                            </div>
                        </div>

                        <!-- Gender (Radio Buttons) -->
                        <div class="col-md-6 position-relative">
                            <label class="form-label">Gender</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="validationTooltipMale" value="male" required>
                                <label class="form-check-label" for="validationTooltipMale">Male</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="validationTooltipFemale" value="female" required>
                                <label class="form-check-label" for="validationTooltipFemale">Female</label>
                            </div>
                            <div class="invalid-tooltip">
                                Please select a gender.
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="col-12">
                            <button class="btn btn-dark" type="submit">Submit form</button>
                        </div>

                    </form><!-- End Custom Styled Validation with Tooltips -->

                </div>
            </div>


        </div>
    </div>
</section>